<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".placefulldetials">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/image"
        android:scaleType="fitXY"
        android:src="@drawable/map"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="rtbhtbsshb"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/placename"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text=""
            android:autoSizeTextType="uniform"
            android:textColor="#000000"
            android:textSize="25dp"
            android:id="@+id/placecontent"
/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Sample Pictures :"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25dp"
            />

        <com.denzcoskun.imageslider.ImageSlider
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="35dp"
            android:id="@+id/imageslider"/>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="35dp"
    android:layout_marginBottom="25dp"
    android:background="@drawable/mapdirection"
    android:layout_gravity="center">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/showmap"
        android:scaleType="fitStart"
        />
    <TextView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:text="Show Direction"
        android:onClick="direction"
        android:gravity="center"
        android:textAlignment="viewStart"
        android:textSize="20dp"
        android:textStyle="bold"

        android:textColor="#000000"/>
</LinearLayout>


    </LinearLayout>

</ScrollView>